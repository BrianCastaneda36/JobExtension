{
  "manifest_version": 3,
  "name": "JobSeeker Pro+",
  "version": "1.0.0",
  "description": "Automatically prefills common job application fields using your saved profile and answers.",
  "icons": {
    "16": "JobSeekerProLogo.png",
    "48": "JobSeekerProLogo.png",
    "128": "JobSeekerProLogo.png"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "commands": {
    "prefill-current-page": {
      "description": "Prefill the current page"
    },
    "open-settings": {
      "description": "Open JobSeeker Pro+ settings"
    },
    "open-tracker": {
      "description": "Open Job Tracker"
    }
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "JobSeeker Pro+",
    "default_icon": {
      "16": "JobSeekerProLogo.png",
      "48": "JobSeekerProLogo.png",
      "128": "JobSeekerProLogo.png"
    }
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
